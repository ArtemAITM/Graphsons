<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@drawable/graph_stock_image">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/graph_stock_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/MenuButton1"
        style="@style/some_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@null"
        android:elevation="4dp"
        android:fontFamily="@font/semi_bold"
        android:rotation="-4"
        android:text="@string/FirstButton"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.widget.Button
        android:id="@+id/MenuButton2"
        style="@style/some_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@null"
        android:elevation="4dp"
        android:fontFamily="@font/semi_bold"
        android:rotation="-4"
        android:text="@string/SecondButton"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuButton1" />

    <android.widget.Button
        android:id="@+id/MenuButton3"
        style="@style/some_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@null"
        android:elevation="4dp"
        android:fontFamily="@font/semi_bold"
        android:rotation="-4"
        android:text="Построение круговых диаграмм вручную"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuButton2" />

    <android.widget.Button
        android:id="@+id/MenuButton4"
        style="@style/some_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@null"
        android:elevation="4dp"
        android:fontFamily="@font/semi_bold"
        android:rotation="-4"
        android:text="Угадай функцию"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuButton3" />

    <android.widget.Button
        android:id="@+id/MenuButton5"
        style="@style/some_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@null"
        android:elevation="4dp"
        android:fontFamily="@font/semi_bold"
        android:rotation="-4"
        android:text="Построение диаграмм из .csv файлов"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuButton4" />

    <android.widget.Button
        android:id="@+id/MenuButton6"
        style="@style/some_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@null"
        android:elevation="4dp"
        android:fontFamily="@font/semi_bold"
        android:rotation="-4"
        android:text="Построение столбчатых диаграмм вручную"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuButton5" />

    <ImageButton
        android:id="@+id/info"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/tg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="35dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/tg" />

    <ImageButton
        android:id="@+id/wk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="35dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tg"
        app:srcCompat="@drawable/wk" />

    <ImageButton
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="35dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wk"
        app:srcCompat="@drawable/phone" />

</androidx.constraintlayout.widget.ConstraintLayout>